<page-content>
<br /><br />
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <question>Email</question>
      <form-field>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "full-width-field" %>
      </form-field>

    <question>Password</question>
      <form-field>
        <%= f.password_field :password, autocomplete: "off", :class => "full-width-field" %>
      </form-field>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</page-content>