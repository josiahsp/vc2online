<%= form_for(submenu) do |f| %>
  <% if submenu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(submenu.errors.count, "error") %> prohibited this submenu from being saved:</h2>

      <ul>
      <% submenu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<Br />
  <question>Title<required-field /></question>
    <form-field>
      <%= f.text_field :title, :class => "full-width-field" %>
    </form-field>

  <question>Include in Main Menu?</question>
    <form-field>
      <%= f.check_box :mainmenu %>
    </form-field>

  <div class="actions">
    <%= f.submit "Submit Menu Category" %>
  </div>
<% end %>
