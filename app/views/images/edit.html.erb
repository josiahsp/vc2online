<page-content>

	<h1>Editing Image</h1>

	<%= render 'form', image: @image %>

	<%= button_to "Delete", {:controller => :images,
		:action => 'destroy', :id => @image.id }, :method => :delete, data: { confirm: "Are you sure you want to delete this image? This action cannot be undone."}, :class => "secondary-button" %>
</page-content>